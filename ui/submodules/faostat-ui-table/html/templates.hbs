<script type='text/x-handlebars-template' id='faostat_ui_table_structure'>
    <h1>
        {{preview_label}}
    </h1>
    <div class="fs-table-holder table-responsive">
        <!--<table class='table table-striped table-bordered table-condensed table-hover'>-->
            <table class='table table-condensed table-striped table-hover'>

            <thead>
                <tr>
                    {{#each headers}}
                        <th style='{{#unless this.show}}display:none;{{/unless}} text-align: center; vertical-align: middle;' data-type='{{this.type}}' >
                            {{this.label}}
                        </th>
                    {{/each}}
                </tr>
            </thead>
            <tbody>
                {{#each rows}}
                    <tr>
                        {{#each this.cells}}
                            <td style='{{#unless this.show}}display:none{{/unless}}' data-type='{{this.type}}'>
                                {{this.label}}
                            </td>
                        {{/each}}
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <span class="fs-page-number pull-right">
                {{page}} <span id='current_page'>{{current_page}} / {{total_pages}}</span>
            </span>
            <ul class='pagination pull-right'>
                <li class="first_page_button">
                    <a>
                        <span aria-hidden='true'>
                            <i class='fa fa-fast-backward'></i>
                        </span>
                    </a>
                </li>
                <li class="previous_page_button">
                    <a>
                        <span aria-hidden='true'>
                            <i class='fa fa-backward '></i>
                        </span>
                    </a>
                </li>
                <li class="next_page_button">
                    <a>
                        <span aria-hidden='true'>
                            <i class='fa fa-forward'></i>
                        </span>
                    </a>
                </li>
                <li class="last_page_button">
                    <a>
                        <span aria-hidden='true'>
                            <i class='fa fa-fast-forward last_page_button'></i>
                        </span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</script>
